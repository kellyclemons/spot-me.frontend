<div class="section">
  <div class="availability">
    <h2 class="availability-text">{{model.name}}, Please Select Availability:</h2>
    <div class="availability-options">

      {{#each availabilities as |availability|}}
        <div {{action "chooseAvailability" availability}} class="availability-options__item {{if (contains availability choices) "availability-options__item--selected"}}">
          <p>{{availability}}</p>
        </div>
      {{/each}}

    </div>

    <div class="move-on">
      <div class="move-on__button direction">{{#link-to 'profile.activities'}}<i class="fa fa-chevron-circle-left backward" aria-hidden="true"></i>{{/link-to}}</div>
      <div class="move-on__button skip">{{#link-to 'profile.zipcode'}}Skip{{/link-to}}</div>
      <button class="move-on__button direction" {{action "saveAndContinue"}}><i class="fa fa-chevron-circle-right forward" aria-hidden="true"></i></button>
    </div>

  </div>
</div>
