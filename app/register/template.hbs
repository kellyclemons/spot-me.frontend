<div class="section">
  <div class="login-container">
    <div class="login-card">
      <div class="login-card__heading">
        {{#link-to "login" class="login-card__tab"}}Login{{/link-to}}
        {{#link-to "register" class="login-card__tab"}}Register{{/link-to}}
      </div>
      <div class="login-card__content">
        {{!-- action? --}}
        <form {{action "registerUser" on="submit"}} class="login-card__form">
          <p class="form-control">
            {{input type="text" placeholder="First Name" class="login-card__control" value=model.firstName}}
          </p>
          <p class="form-control">
            {{input type="text" placeholder="Email" class="login-card__control" value=model.email}}
          </p>
          <p class="form-control">
            {{input type="text" placeholder="Password" class="login-card__control" value=model.password}}
          </p>

          <p class="login-card__error">
            {{error}}
          </p>
          <p class="login-card__checkbox">
            <input type="checkbox"> I'd like to receive the latest updates and offers!
          </p>
          <p class="login-card__checkbox">
            <input type="checkbox"> I have read and accept the Terms and Agreements.
          </p>

          <button type="submit" class="login-card__submit">Log In</button>
        </form>
      </div>
    </div>
  </div>
</div>
